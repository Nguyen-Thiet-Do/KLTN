<div class="endpoint">
    <div class="endpoint-header">
        <span class="method <%= route.method.toLowerCase() %>">
            <%= route.method %>
        </span>
        <span class="path"><%= route.path %></span>
        <span class="auth-badge <%= route.auth ? 'required' : 'public' %>">
            <%= route.auth ? 'üîí Auth Required' : 'üåê Public' %>
        </span>
    </div>
    
    <div class="description"><%= route.description %></div>
    
    <% if (route.role) { %>
        <div class="role-info">
            <strong>‚ö†Ô∏è Role:</strong> <%= route.role %>
        </div>
    <% } %>
    
    <% if (route.body) { %>
        <div class="body-params">
            <h4>üìã Request Body</h4>
            <% Object.entries(route.body).forEach(function([key, value]) { %>
                <div class="param">
                    <span class="param-name"><%= key %>:</span>
                    <span class="param-type"><%= value %></span>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>